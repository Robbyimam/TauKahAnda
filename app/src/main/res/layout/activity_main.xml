<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="robbydeveloper.taukahanda.MainActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/taukahanda"
        android:layout_above="@+id/hereNama" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="11dp"
        android:textSize="20dp"
        android:text="Masukan Nama Anda" 
        android:textColor="#000"
        android:id="@+id/hereNama"
        android:layout_above="@+id/namaText"
         />

    <EditText
        android:id="@+id/namaText"
        android:hint="Nama"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_above="@+id/logButton"
        android:layout_centerHorizontal="true" />

    <com.github.rubensousa.raiflatbutton.RaiflatButton
        android:id="@+id/logButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:textColor="#000000"
        android:background="@drawable/rounded_button"
        android:layout_marginBottom="164dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
