<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="robbydeveloper.taukahanda.MenuActivity">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txNama"
        android:text=" "
        android:textSize="20dp"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Silahkan Kamu Pilih "
        android:textSize="30dp"
        android:textColor="@color/black"
        android:layout_marginTop="34dp"
        android:id="@+id/textView"
        android:textStyle="bold"
        android:layout_below="@+id/txNama"
        android:layout_centerHorizontal="true" />

    <br.com.bloder.magic.view.MagicButton
        android:id="@+id/magic_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:magic_button_size="60dp"
        app:button_icon="@drawable/materi"
        app:button_icon_width="30dp"
        app:button_icon_height="30dp"
        app:hide_text="Materi"
        app:hide_text_size="18dp"
        app:hide_text_color="@android:color/black"
        app:icon_button_color="@color/colorPrimary"
        app:expandable_area_color="@color/colorPrimaryDark"
        android:layout_marginTop="45dp"
        android:layout_below="@+id/textView"
        android:layout_alignLeft="@+id/textView"
        android:layout_alignStart="@+id/textView" />
    <br.com.bloder.magic.view.MagicButton
        android:id="@+id/magic_button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:magic_button_size="60dp"
        app:button_icon="@drawable/test"
        app:button_icon_width="30dp"
        app:button_icon_height="30dp"
        app:hide_text="Test"
        app:hide_text_size="18dp"
        app:hide_text_color="@android:color/black"
        app:icon_button_color="@color/colorPrimary"
        app:expandable_area_color="@color/colorPrimaryDark"
        android:layout_marginTop="34dp"
        android:layout_below="@+id/magic_button"
        android:layout_alignLeft="@+id/magic_button"
        android:layout_alignStart="@+id/magic_button" />
    <br.com.bloder.magic.view.MagicButton
        android:id="@+id/magic_button3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:magic_button_size="60dp"
        app:button_icon="@drawable/about"
        app:button_icon_width="30dp"
        app:button_icon_height="30dp"
        app:hide_text="About"
        app:hide_text_size="18dp"
        app:hide_text_color="@android:color/black"
        app:icon_button_color="@color/colorPrimary"
        app:expandable_area_color="@color/colorPrimaryDark"
        android:layout_marginTop="34dp"
        android:layout_below="@+id/magic_button2"
        android:layout_alignLeft="@+id/magic_button"
        android:layout_alignStart="@+id/magic_button" />


</RelativeLayout>
